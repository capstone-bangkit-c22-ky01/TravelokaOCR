<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".ui.flightscreen.FlightActivity">

    <TextView
        android:id="@+id/tv_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Flight_HomeActivity"
        android:fontFamily="@font/nunito_extra_bold"
        android:textSize="34sp"
        android:textColor="?attr/customColorPrimary10"
        android:layout_marginTop="42dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_flight"
        app:layout_constraintBottom_toTopOf="@id/footer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_layout_with_10_radius"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/fromTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="?attr/customColorFont"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fromEditTextLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fromTextView"
                    app:startIconDrawable="@drawable/ic_departures4">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/fromEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city_departure"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textSize="13sp"
                        android:background="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/toTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="?attr/customColorFont"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/fromEditTextLayout"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/toEditTextLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toTextView"
                    app:startIconDrawable="@drawable/ic_arrivals4">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/toEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city_destination"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textSize="13sp"
                        android:background="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="?attr/customColorFont"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/toEditTextLayout"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateEditTextLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateTextView"
                    app:startIconDrawable="@drawable/ic_calendar2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_date"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textSize="13sp"
                        android:background="@color/white"
                        android:padding="0dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/passengersTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/passengers"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="?attr/customColorFont"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintEnd_toEndOf="@id/passengersEditTextLayout"
                    app:layout_constraintTop_toBottomOf="@id/dateEditTextLayout"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passengersEditTextLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passengersTextView"
                    app:startIconDrawable="@drawable/ic_traveling">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/passengersEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/passenger_default"
                        android:textSize="13sp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:focusableInTouchMode="true"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="none"
                        android:padding="0dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/seatClassTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_class"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="?attr/customColorFont"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintEnd_toEndOf="@id/seatClassEditTextLayout"
                    app:layout_constraintTop_toBottomOf="@id/passengersEditTextLayout"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/seatClassEditTextLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/seatClassTextView"
                    app:startIconDrawable="@drawable/ic_seat">

                    <AutoCompleteTextView
                        android:id="@+id/seatClassEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seat_class_default"
                        android:textSize="13sp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:focusableInTouchMode="true"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="none"
                        android:padding="0dp"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/searchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_btn"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="?attr/customColorPrimary10"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="55dp"
                    app:layout_constraintTop_toBottomOf="@id/seatClassEditTextLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/flightMenu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_flight_menu_on_click"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:text="@string/flight"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/secondary50"
            android:layout_marginTop="7dp"
            android:layout_marginStart="30dp"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/historyMenu"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/historyMenu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_history_menu"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:text="@string/history"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/font_hint"
            android:layout_marginTop="7dp"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/flightMenu"
            app:layout_constraintEnd_toEndOf="@id/profileMenu"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profileMenu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_user_menu"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:text="@string/account"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/font_hint"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="30dp"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/historyMenu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>