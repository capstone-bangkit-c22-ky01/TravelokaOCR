<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cloud"
            android:layout_width="428dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/cloud_background"
            android:src="@drawable/clouds"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_vacation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/vacation"
            android:src="@drawable/vacation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/font"
            android:fontFamily="@font/nunito_bold"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_vacation" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:helperText=""
            app:helperTextTextColor="@color/bg_btn_logout"
            app:hintEnabled="false"
            app:endIconMode="clear_text"
            app:errorIconDrawable="@drawable/ic_error"
            app:layout_constraintTop_toBottomOf="@id/tv_login">

            <com.example.travelokaocr.ui.customview.EmailEditTextView
                android:id="@+id/etv_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/nunito_semi_bold"
                android:hint="@string/enter_email"
                android:textSize="14sp"
                android:textColorHint="@color/font_hint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:endIconMode="password_toggle"
            app:helperText=""
            app:helperTextTextColor="@color/bg_btn_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/til_email">

            <com.example.travelokaocr.ui.customview.PasswordEditTextView
                android:id="@+id/etv_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/nunito_semi_bold"
                android:gravity="start|center"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="@color/font_hint"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.example.travelokaocr.ui.customview.AuthenticationButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button_disabled"
            android:enabled="false"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/login"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="?attr/customColorPrimary10"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_password"/>

        <View
            android:id="@+id/v_left_line"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="@color/font"
            android:layout_marginTop="27dp"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toStartOf="@id/tv_or_login_with"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_login"/>

        <TextView
            android:id="@+id/tv_or_login_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/or_login_with"
            android:layout_marginTop="16dp"
            android:textColor="@color/font"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/v_right_line"
            app:layout_constraintStart_toEndOf="@id/v_left_line"
            app:layout_constraintTop_toBottomOf="@id/btn_login"/>

        <View
            android:id="@+id/v_right_line"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_marginEnd="50dp"
            android:background="@color/font"
            android:layout_marginTop="27dp"
            app:layout_constraintStart_toEndOf="@id/tv_or_login_with"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.example.travelokaocr.ui.customview.GoogleButton
            android:id="@+id/btn_login_with_google"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_google"
            android:drawableStart="@drawable/ic_google"
            android:fontFamily="@font/nunito_bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:text="@string/google"
            android:textAllCaps="false"
            android:textColor="@color/font"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_or_login_with" />

        <TextView
            android:id="@+id/tv_dont_have_an_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/dont_have_an_account"
            android:textColor="@color/font"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sign_up"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="@+id/btn_login_with_google"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_with_google" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/sign_up_underline"
            android:textColor="@color/font"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_login_with_google"
            app:layout_constraintStart_toEndOf="@+id/tv_dont_have_an_account"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_with_google" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="208dp"
            android:layout_height="20dp"
            android:indeterminate="true"
            android:indeterminateTint="?attr/customColorNeutral50"
            android:indeterminateTintMode="src_atop"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up"
            app:layout_constraintVertical_bias="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>