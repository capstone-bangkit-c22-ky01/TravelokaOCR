<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    tools:context=".ui.profile.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:src="@drawable/bg_header_profile"
                android:contentDescription="@string/bg_header_profile" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/nunito_extra_bold"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile_container"
                android:layout_width="328dp"
                android:layout_height="496dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:contentDescription="@string/content_profile" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="235dp"
                    android:layout_height="235dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/avatar"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/secondary50"/>
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="@string/username"
                    android:textColor="@color/font"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="300dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="@string/email"
                    android:textColor="@color/font"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="336dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp" />

                <Button
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="390dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/edit_profile"
                    android:background="@drawable/bg_button_edit_profile"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <com.example.travelokaocr.ui.customview.AuthenticationButton
            android:id="@+id/btn_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_profile"
            android:layout_width="328dp"
            android:layout_height="66dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button"
            android:enabled="false"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/logout"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/about_traveloka"
            android:textColor="@color/font"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>