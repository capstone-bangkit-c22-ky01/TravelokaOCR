<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_sign_up_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloud_background"
                android:src="@drawable/cloud" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/iv_cloud"
                android:layout_alignEnd="@id/iv_cloud"
                android:layout_alignBottom="@id/iv_cloud"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/receptionist"
                android:src="@drawable/receptionist" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_sign_up_banner" />

        <LinearLayout
            android:id="@+id/ll_sign_up_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.example.travelokaocr.customview.FullNameEditTextView
                android:id="@+id/etv_full_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_full_name"
                android:textSize="14sp"
                android:textColorHint="@color/text_hint_color"
                tools:ignore="RtlSymmetry" />

            <com.example.travelokaocr.customview.EmailEditTextView
                android:id="@+id/etv_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_email"
                android:textSize="14sp"
                android:textColorHint="@color/text_hint_color"
                tools:ignore="RtlSymmetry" />

            <com.example.travelokaocr.customview.PasswordEditTextView
                android:id="@+id/etv_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_password"
                android:textSize="14sp"
                android:textColorHint="@color/text_hint_color"
                tools:ignore="RtlSymmetry"/>

            <com.example.travelokaocr.customview.AuthenticationButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_disabled_background"
                android:enabled="false"
                android:text="@string/sign_up"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sign_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ll_sign_up_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/line_sign_up_with"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_sign_up_with"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/line_sign_up_with"/>
        </LinearLayout>

        <com.example.travelokaocr.customview.GoogleButton
            android:id="@+id/btn_sign_up_with_google"
            android:layout_width="208dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_google_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableStart="@drawable/ic_google"
            android:text="@string/google"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_sign_google" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up_with_google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="@string/already_have_an_account"/>
            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="@string/login_underline"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>