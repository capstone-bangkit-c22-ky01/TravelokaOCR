<resources>
    <!-- Base application theme. -->
    <style name="Theme.TravelokaOCR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/customColorSecondary50</item>
        <item name="colorPrimaryVariant">?attr/customColorSecondary90</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/customColorSecondary50</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="customColorPrimary90">@color/primary90</item>
        <item name="customColorPrimary50">@color/primary50</item>
        <item name="customColorPrimary10">@color/primary10</item>

        <item name="customColorSecondary90">@color/secondary90</item>
        <item name="customColorSecondary50">@color/secondary50</item>
        <item name="customColorSecondary10">@color/secondary10</item>

        <item name="customColorNeutral90">@color/neutral90</item>
        <item name="customColorNeutral50">@color/neutral50</item>
        <item name="customColorNeutral10">@color/neutral10</item>

        <item name="customColorFont">@color/font</item>
        <item name="customColorHint">@color/font_hint</item>

        <item name="customColorBackground">@color/background</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/secondary50</item>
        <item name="colorAccent">@color/secondary90</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:keyTextSize">14sp</item>
    </style>
</resources>